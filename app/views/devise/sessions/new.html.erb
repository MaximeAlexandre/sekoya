<div class="container col-4 seko-card p-3">

<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "seko-search-bar" }  %>
    <%= f.input :password,
                required: false,
                label: "Mot de passe",
                input_html: { autocomplete: "current-password", class: "seko-search-bar" }  %>
    <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions text-center">
    <%= f.button :submit, "Connexion", class: 'btn seko-button w-50 m-3' %>
  </div>
<% end %>
</div>
<div class="seko-flex container col-4 p-3">
<%= render "devise/shared/links" %>
</div>
