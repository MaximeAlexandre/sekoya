      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs seko-card p-3">
            <%= f.input :last_name,
                        label: "Nom",
                        required: true,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :first_name,
                        label: "Prénom",
                        required: true,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "seko-search-bar" } %>
            <%= f.input :mobile_number,
                        label: "Portable",
                        required: true,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :password,
                        required: true,
                        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "seko-search-bar" } %>
            <%= f.input :password_confirmation,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "seko-search-bar" } %>
            <%= f.input :address,
                        label: "Adresse",
                        as: :search,
                        required: true,
                        input_html: { autocomplete: "address" , class: "seko-search-bar" }  %>
            <%= f.input :address2,
                        label: "Complément d'adresse",
                        required: false,
                        input_html: { class: "seko-search-bar" }  %>
            <%= f.hidden_field :role, value: "senior" %>
            <%= f.input :photo, as: :file, direct_upload: true %>

            <h3> Aidez SEKOYA à mieux vous connaitre </h3>

            <%= f.input :description,
                        label: "Parlez nous un peu de vous",
                        placeholder: "Quels sont vos passe-temps? Avez vous des petits enfants? ",
                        required: false,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :pathology,
                        label: "Souffrez vous d'une pathologie chronique?",
                        collection: ['Parkinson','Alzheimer', 'Autre'],
                        include_blank: true,
                        required: false,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :handicap,
                        label: "Souffrez vous d'un handicap ou d'une incapacité temporaire ?",
                        collection: ['Oui','Non'],
                        include_blank: true,
                        required: false,
                        input_html: { class: "seko-search-bar" } %>


        </div>
        <div class="form-actions seko-flex">
          <%= f.button :submit, "S'inscrire", class: "btn seko-button w-50 m-3" %>
          <%= render "devise/shared/links" %>
        </div>
      <% end %>


