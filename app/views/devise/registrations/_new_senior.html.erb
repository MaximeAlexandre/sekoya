      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs seko-card p-3">
            <%= f.input :last_name,
                        label: "Nom",
                        required: true,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :first_name,
                        label: "Prénom",
                        required: true,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "seko-search-bar" } %>
            <%= f.input :mobile_number,
                        label: "Portable",
                        required: true,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :password,
                        label: "Mot de passe",
                        required: true,
                        hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                        input_html: { autocomplete: "new-password", class: "seko-search-bar" } %>
            <%= f.input :password_confirmation,
                        label: "Confirmez le mot de passe",
                        required: true,
                        input_html: { autocomplete: "new-password", class: "seko-search-bar" } %>
            <%= f.input :address,
                        label: "Adresse",
                        as: :search,
                        required: true,
                        input_html: { autocomplete: "address", :id => "senior_address", class: "seko-search-bar" }  %>
            <%= f.input :address2,
                        label: "Complément d'adresse",
                        required: false,
                        input_html: { class: "seko-search-bar" }  %>
            <%= f.hidden_field :role, value: "senior" %>
            <%= f.input :photo, label: "Photo de profil", as: :file, direct_upload: true, :use_default_url => true%>

            <h3> Aidez KOYA à mieux vous connaitre </h3>

            <%= f.input :description,
                        label: "Parlez nous un peu de vous",
                        placeholder: "Quels sont vos passe-temps? Avez vous des petits enfants? ",
                        required: false,
                        input_html: { class: "seko-search-bar" } %>
            <%= f.input :pathology,
                        label: "Souffrez vous d'une pathologie chronique?",
                        collection: [
                          ['Parkinson', 'parkinson' ],
                          ['Alzheimer', 'lazheimer'],
                          ['Autre', 'other']
                        ],
                        include_blank: true,
                        required: false,
                        input_html: { class: "seko-search-bar" } %>

               <div id="other_pathology">
                   <%= f.input :pathology,
                               label: "Précisez",
                               input_html: { class: "seko-search-bar" }
                   %>
               </div>

            <%= f.input :handicap,
                        label: "Souffrez vous d'un handicap ou d'une incapacité temporaire ?",
                        collection: ['Oui','Non'],
                        include_blank: true,
                        required: false,
                        input_html: { class: "seko-search-bar" } %>
        </div>
        <div class="form-actions seko-flex">
          <%= f.button :submit, "S'inscrire", class: "btn seko-button w-100 m-3" %>
        </div>
      <% end %>


