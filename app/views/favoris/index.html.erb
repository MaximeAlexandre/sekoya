<div class="container">
<h1>Mes Favoris</h1>
    <%@favoris.each do |booking| %>
        <div class="seko-card seko-flex mt-3 col-8">
            <div>
                <%= link_to profile_path(booking.helper), :style=>'color: black;' do %>
                    <img class="avatar-extra-large mt-3 ml-2" src="<%= booking.helper.photo %>" alt="" >
                <% end %>
                <%= render :partial => "remove_favoris", locals: { booking: booking, path: "favoris" } %>
            </div>
            <div class="seko-in-card seko-flex seko-in-card-list m-3 col-8">
            <%= link_to profile_path(booking.helper), :style=>'color: black;' do %>
            <div>
                <div class="d-flex flex-row justify-content-between align-items-center">
                    <h3><%= booking.helper.first_name %> <%= booking.helper.last_name %></h3>
                    <% if booking.helper.car %>
                        <i class="fas fa-car"></i>
                    <% else %>
                        <i class="fas fa-walking"></i>
                    <% end %>
                </div>
                <ul>
                    <% Diploma.where(user_id: booking.helper.id).each do |diploma| %>
                        <li><%= diploma.name %></li>
                    <% end %>
                </ul>
                <div>
                    <%  @reviews =[]%>
                    <% bookings = Booking.where(helper_id: booking.helper.id) %>
                        <% bookings.each do |booking| %>
                        <% review = Review.find_by(booking_id: booking.id) %>
                        <% @reviews << review unless review.nil? %>
                    <% end %>
                    <% if @reviews.empty? %>
                        <p> No reviews currently </p>
                    <% else %>
                        <div class="ml-4 text-center">
                        Moyenne : <%=  @reviews.collect(&:note).sum.to_f/@reviews.length if @reviews.length > 0 %>
                        <p >(<%= @reviews.length %> avis)</p>
                        </div>
                    <% end %>
                </div>
            </div>
            <div>
                <p><%= booking.helper.price %>â‚¬</p>
            </div>
        </div>
      <% end %>
    </div>
    <% end  %>
    <p>------------------</p>
    <%= link_to "Back", senior_path, class: "btn seko-senior-btn" %>
</div>
