<div>
    <div class="text-center">
      <h3>Comment <%= @booking.helper.first_name %> peut vous aider ?</h3>
      <p>Vous pouvez choisir jusqu'à <%= ((@booking.end_time  - @booking.start_time)/3600).to_i %> activités.</p>
    </div>



<div class="seko-card recap-card container mb-4 mt-5">
  <%= form_tag "/bookings/#{@booking.id}/tasks", method:"patch" %>
    <div class="seko-flex">
      <div class="p-4">
        <h4 class="text-center">COMPAGNIE</h4>

        <div class="category-choice m-3">
          <input type="checkbox" name="Promenade" hidden>
          <%= label_tag ('Promenade') %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Loisirs" hidden>
          <%= label_tag ('Loisirs') %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Activité intellectuelle" hidden>
          <%= label_tag ('Activités intellectuelles') %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Activité sportive" hidden>
          <%= label_tag ('Activités sportives') %>
        </div>

      </div>

      <div class="p-4">
        <h4 class="text-center">AIDE</h4>

        <div class="category-choice m-3">
          <input type="checkbox" name="Se lever / Se coucher" hidden>
          <%= label_tag ('Se lever / Se coucher') %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Se laver / S'habiller" hidden>
          <%= label_tag ("Se laver / S'habiller") %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Ménage" hidden>
          <%= label_tag ('Ménage') %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Courses" hidden>
          <%= label_tag ('Courses') %>
        </div>
      </div>

      <div class="accompagnement d-flex-column justify-content p-4">
        <h4 class="text-center">ACCOMPAGNEMENT</h4>
        <div class="category-choice m-3">
          <input type="checkbox" name="Accompagnement à un rendez-vous" hidden>
          <%= label_tag ('Accompagnement à un rendez-vous') %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Prise de médicaments" hidden>
          <%= label_tag ('Prise de Médicaments') %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Gestion d'une pathologie ou d'un Handicap" hidden>
          <%= label_tag ("Gestion d'une pathologie") %>
        </div>

        <div class="category-choice m-3">
          <input type="checkbox" name="Gestion d'une pathologie ou d'un Handicap" hidden>
          <%= label_tag ("Gestion d'un handicap") %>
        </div>

      </div>

    </div>

      <div style="text-align:center;">
         <%= submit_tag 'Valider', class: "btn seko-button mb-4" %>
      </div>

  </div>
  </div>
</div>
