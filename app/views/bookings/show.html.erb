
<p>  Liste des commentaires </p>
<% @booking.reviews.each do |review| %>
 <p><%=  review.content %> (<%= review.booking.senior.first_name %>) </p>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for [@booking, @review] do |f| %>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
        <div class="form-inputs">
          <%= f.input :content, label: 'Laisser un commentaire'%>
          <%= f.input :note, collection: 1..5, label: 'Notez votre experience'%>
        </div>
        <div class="seko-button">
          <%= f.button :submit, 'Ajouter un commentaire' %>
        </div>
      <% end %>
    </div>
  </div>

</div>
