<div>
  <h3 class="text-center">Vous avez sélectionné notre super Helper <%= @booking.helper.first_name %> </h3>
</div>

<div class="recap-card">
  <div class="seko-card col-6 p-4 m-2">
    <div class="seko-in-card-recap m-3 seko-flex">
      <div class="col-3 mt-4">
        <img class="avatar-extra-large" src="<%= @booking.helper.photo %>" alt="" >
      </div>

      <div class="p-3 col-12">
        <h3><%= @booking.helper.first_name %> <%= @booking.helper.last_name %></h3>
        <div>
          <% @reviews.each do |review| %>
          <% review.note.times do %>
            <i class="fas fa-star"> </i>
              <% end %>
              <% (5 - review.note).times do %>
              <% end %>
            <div class="ml-4 text-center">
             <p >(<%= @reviews.length %> avis)</p>
            </div>
          <% end %>
        </div>
        <p><%= @booking.helper.car %></p>
        <h4>Formation</h4>
        <% @diplomas.each do |diploma| %>
          <ul>
          <li><%= diploma.name %></li>
          </ul>
        <% end %>
      </div>
</div>
      <div class=" m-3 p-3 text-center">
        <p>Votre adresse </p>
        <p><%= current_user.address %> </p>
        <p> Date prévue : <%= @booking.date %> de <%= @booking.start_time.strftime("%H:%M%p") %> à <%= @booking.end_time.strftime("%H:%M%p") %></p>
        <p> Activités choisies</p>
        <% @tasks.each do |task| %>
        <p><%= task.name %></p>
          <% end %>
        <br>
        <h3 class="mb-3"> <strong><%= @booking.helper.price %> € x <%= (@booking.end_time  - @booking.start_time)/3600 %>heures </strong> </h3>
        <%= link_to 'Valider', booking_path(@booking), class: "btn seko-button search-button"%>
      </div>
    </div>
  </div>
</div>
</div>
