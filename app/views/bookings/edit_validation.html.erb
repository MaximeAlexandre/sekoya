  <div>
    <h3 class="text-center">Vous avez sélectionné notre super Helper <%= @booking.helper.first_name %> </h3>
  </div>
 <div class="recap-card">
  <div class="seko-card col-6 p-4 m-2">
    <div class="seko-in-card m-3 seko-flex">
      <div class="col-3">
        <img class="avatar-extra-large" src="https://kitt.lewagon.com/placeholder/users/anthomanto" alt="" >
      </div>
      <div class="seko-in-card-list m-4 col-10">
        <h3><%= @booking.helper.first_name %> <%= @booking.helper.last_name %></h3>
        <small>review + X reviews</small>
        <p><%= @booking.helper.car %></p>
        <p><%= @booking.helper.diploma %></p>
      </div>
    </div>


    <div class="text-center">
      <h3>Votre adresse </h3>
      <p><%= current_user.address %> </p>
      <h3>Date prévue</h3>
      <p><%= @booking.date %> de <%= @booking.start_time.strftime("%H:%M%p") %> à <%= @booking.end_time.strftime("%H:%M%p") %></p>
      <h3> Activités choisies</h3>
      <p> LISTE DES TACHES CHOISIES </p>
      <h3><%= @booking.helper.price %> € x <%= (@booking.end_time  - @booking.start_time)/3600 %>heures</h3>
      <%= link_to 'Valider', booking_path(@booking), :class => "btn seko-button search-button" %>
    </div>
  </div>
</div>
</div>
