<div class="show-flex container mt-5">
  <div class="col-7 seko-card show-profil-card mr-5 p-4">
    <div class="top-show seko-in-card">
      <div class="mr-4">
        <div>
          <img class="avatar-large ml-2" src="<%= @helper.photo %>" alt="" >
        </div>
      </div>
      <div class="seko-flex seko-show-in-card">
        <div>
          <div class="d-flex flex-row align-items-end">
            <h3><%= @helper.first_name.capitalize %> <%= @helper.last_name.capitalize %></h3>
            <% if @helper.car %>
              <i class="fas fa-car ml-3 mb-3"></i>
            <% end %>
          </div>
          <p>Inscrit depuis <%= @registration_duration %></p>
        </div>
        <div class="d-flex flex-column justify-content-between">
          <div>
            <% if @reviews.empty? %>
              <p> No reviews currently </p>
            <% else %>
              <%(@average_rating).to_i.times do%>
                <i class="fas fa-star"> </i>
              <% end %>
              <div class="ml-4 text-center">
                <p>(<%= @reviews.length %> avis)</p>
              </div>
            <% end %>
          </div>
          <div class="text-right">
            <p style="margin-bottom: 0;"><%= @helper.price %>€ / heure</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Description -->
    <div class="mt-4 ml-2">
      <h4>Profil</h4>
      <p><%= @helper.description %></p>
    </div>

    <!-- Diplomas / Formations -->
    <div class="border-top mt-4 ml-2 pt-4">
      <h4>Diplômes / Formations</h4>
      <ul class="m-2">
        <% @diplomas.each do |diploma| %>
          <li class="m-2"><%= diploma.name %></li>
        <% end %>
      </ul>
    </div>
    <div class="border-top mt-4 ml-2 pt-4">
      <h4>Reviews</h4>
      <% if @reviews.empty? %>
        <p>Cet helper n'a pas encore de commentaires</p>
      <% else %>
        <% @reviews.each do |review| %>
          <div class="mb-4">
            <% review.note.times do%>
              <i class="fas fa-star"> </i>
            <% end %>
            <p><%= review.content %></p>
            <p class="ml-3">
              <img class="avatar" src="<%= review.booking.senior.photo %>" alt="" >
              &nbsp
              <%= review.booking.senior.first_name %>
            </p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Calendrier -->
  <div class="seko-card date-block">
    <form action="/profiles/<%= @helper.id %>/bookings" method="POST">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <div class="form-inputs">
        <input class="form-control datepicker seko-card" name="date" type="date" value="<%= Date.today %>" id="example-date-input" hidden>
        <div class="hour-block seko-show-in-card m-3">
          <div class="time-block">
            <label for="start_time">Heure de début</label>
            <select class="seko-search-bar"  name="start_time" id="start_time">
              <% (7..20).to_a.each do |hour| %>
                <option value="<%= hour %>"><%= hour %>:00</option>
              <% end %>
            </select>
          </div>
          <div class="time-block">
            <label for="end_time">Heure de fin</label>
            <select class="seko-search-bar" name="end_time" id="end_time">
              <% (8..21).to_a.each do |hour| %>
                <option value="<%= hour %>"><%= hour %>:00</option>
              <% end %>
            </select>
          </div>
        </div>
      </div>
      <div class="text-center m-4">
      <h4 id="total" data-price="<%= @helper.price %>"> <strong><%= (8  - 7) %> heure - Total : <%= (8  - 7)*@helper.price %> €</strong> </h4>
      </div>
      <input class="btn seko-button-show" type="submit" value="Valider">
    </form>
  </div>
</div>
